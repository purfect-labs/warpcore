{
  "name": "warpcore-analytics-tests",
  "version": "1.0.0",
  "description": "WARPCORE Analytics Dashboard Testing Framework",
  "scripts": {
    "test": "npx playwright test",
    "test:ui": "npx playwright test tests/playwright/ui --project=chrome-desktop",
    "test:api": "npx playwright test tests/playwright/api --project=api-tests",
    "test:flows": "npx playwright test tests/playwright/flows --project=user-flows",
    "test:all": "npx playwright test --project=chrome-desktop --project=api-tests --project=user-flows",
    "test:mobile": "npx playwright test --project=mobile-chrome",
    "test:cross-browser": "npx playwright test --project=chrome-desktop --project=firefox-desktop",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:report": "npx playwright show-report",
    "test:install": "npx playwright install",
    "test:install-deps": "npx playwright install-deps",
    "test:codegen": "npx playwright codegen http://localhost:8080"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "keywords": [
    "warpcore",
    "analytics",
    "playwright",
    "testing",
    "e2e",
    "integration"
  ],
  "author": "WARPCORE Team",
  "license": "MIT"
}