[warpcore]
name = "WARPCORE"
version = "3.0.0"
description = "Kubernetes Command Center - PAP Compliant"

[scope]
team = "all"

[pap_layers]
web
  routes = "Entry points with minimal logic"
  templates = "Jinja2 template rendering"
  static = "CSS, JS, images"
api
  controllers = "Validation and translation"
  orchestrators = "Workflow composition"
  providers = "External integrations"
  middleware = "Policy enforcement"
  executors = "Safety gates"
data
  config = "Configuration loading and management"
  discovery = "Autonomous provider detection"
  features = "Feature gates and licensing"
base
  system_orchestrator = "Cross-layer initialization control plane"
  cli_control_plane = "Command line interface and execution"

[logging]
audit_enabled = true
audit_file = "/tmp/warpcore_audit.log"
log_level = "INFO"

[security]
policy_enforcement = true
rate_limiting = false
data_redaction = false

[licensing]
feature_gates = true
encryption_enabled = true
hardware_binding = true
production_mode = true
audit_all_operations = true
key_rotation_days = 90
max_license_duration_days = 365
trial_duration_days = 7
max_trial_duration_days = 30

[packaging]
native_builds = true

[compliance]
pap_architecture = true
license_validation_required = true
security_compliance = true
tamper_detection = true
hardware_binding_enforcement = true

[license_security]
fernet_encryption = true
hardware_fingerprinting = true
tamper_detection = true
rate_limiting = true
audit_logging = true
production_features = ["production", "security", "audit", "enterprise"]
required_security_features = ["production", "security"]
security_level = "production"

[license_features]
basic = ["core", "api"]
standard = ["core", "api", "web", "monitoring"]
premium = ["core", "api", "web", "monitoring", "analytics", "reporting"]
enterprise = ["core", "api", "web", "monitoring", "analytics", "reporting", "sso", "compliance"]
production = ["core", "api", "web", "monitoring", "security", "audit"]

[license_validation]
hardware_binding_required = true
tamper_detection_enabled = true
encryption_strength_check = true
rate_limit_requests = true
audit_all_validations = true
max_validation_attempts = 3
validation_cache_minutes = 5
